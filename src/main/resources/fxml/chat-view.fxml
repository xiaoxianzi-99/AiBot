<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.pei.controller.ChatController" 
            stylesheets="@../css/style.css">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="AI Chat Bot" styleClass="header-title"/>
            <Label text="智能对话助手" styleClass="header-subtitle"/>
        </VBox>
    </top>
    
    <!-- Chat Area -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="chat-scroll-pane">
            <content>
                <VBox fx:id="chatContainer" styleClass="chat-container" spacing="5">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
    <!-- Input Area -->
    <bottom>
        <VBox styleClass="input-area">
            <padding>
                <Insets top="10" right="15" bottom="15" left="15"/>
            </padding>
            <HBox spacing="10" alignment="CENTER">
                <TextArea fx:id="messageInput" 
                         promptText="输入消息..." 
                         wrapText="true"
                         prefRowCount="2"
                         styleClass="message-input">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </TextArea>
                <Button fx:id="sendButton" 
                       text="发送" 
                       onAction="#handleSendMessage"
                       styleClass="send-button"
                       prefWidth="80"
                       prefHeight="60">
                </Button>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>
